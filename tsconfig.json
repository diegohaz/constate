{
  "compilerOptions": {
    "outDir": "dist/ts",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true,
    "removeComments": true,
    "stripInternal": true
  },
  "include": [
    "src",
    "types"
  ]
}
